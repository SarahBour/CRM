@page
@model Culture2Geth.Pages.RegisterModel
@{
	ViewData["Title"] = "Membership Registration Page";
	Layout = null;
}
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Culture2Geth</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Culture2Geth.styles.css" asp-append-version="true" />
</head>

<div class="containerAuth">
	<h2 style="color: #FD1F3D">Request for membership</h2>
	<form method="POST">
		@if (Model.CurrentStep == 1)
		{
			<h3>Step1: Basic Information</h3>
			<br />
			<div class="form-group">
				<label for="FirstName">First Name</label>
				<input type="text" name="FirstName" class="form-control" placeholder="Enter your first name" required />
			</div>
			<div class="form-group">
				<label for="LastName">Last Name</label>
				<input type="text" name="LastName" class="form-control" placeholder="Enter your last name" required />
			</div>
			<div class="form-group">
				<label for="Email">Email</label>
				<input type="email" name="Email" class="form-control" placeholder="Enter your email" required />
			</div>

			<div class="form-group">
				<label for="Password">Password</label>
				<input type="password" name="Password" class="form-control" placeholder="Enter your password" required />
			</div>
			<div class="form-group">
				<label for="ConfirmPassword">Confirm Password</label>
				<input type="password" name="ConfirmPassword" class="form-control" placeholder="confirm your password" required />
			</div>
			<div class="form-group">
				<label for="Address">Address</label>
				<input type="text" name="Address" class="form-control" placeholder="Enter your address" required />
			</div>
			<div class="form-group">
				<label for="PhoneNumber">Phone Number</label>
				<input type="tel" name="PhoneNumber" class="form-control" placeholder="Enter your phone number" required />
			</div>
			<br />
			<button class="button" type="submit" name="nextStep" value="true">Next</button>
		}
		else if (Model.CurrentStep == 2)
		{
			<h3>Step 2: Membership Details</h3>
			<div class="form-group">
				<label for="MembershipType">Membership Type</label>
				<select name="MembershipType" class="form-control" required>
					<option value="">Select your membership type</option>
					<option value="CommunityMember">Community Member</option>
					<option value="KeyAccessMember">Key Access Member</option>
					<option value="CreativeWorkspaceMember">Creative Workspace Member</option>
				</select>
			</div>
			<div class="form-group">
				<label for="Interests">Interests</label>
				<div>
					<label><input type="checkbox" name="Interests" value="Creative Arts" /> Creative Arts</label>
					<label><input type="checkbox" name="Interests" value="Sustainability" /> Sustainability</label>
					<label><input type="checkbox" name="Interests" value="Community Service" /> Community Service</label>
					<label><input type="checkbox" name="Interests" value="Entrepreneurship" /> Entrepreneurship</label>
					<label><input type="checkbox" name="Interests" value="Technology" /> Technology</label>
					<label><input type="checkbox" name="Interests" value="Education" /> Education and Learning</label>
					<label><input type="checkbox" name="Interests" value="Networking" /> Networking</label>
					<label><input type="checkbox" name="Interests" value="Cultural Events" /> Cultural Events</label>
					<label><input type="checkbox" name="Interests" value="Health and Wellness" /> Health and Wellness</label>
					<label><input type="checkbox" name="Interests" value="Food and Cooking" /> Food and Cooking</label>
				</div>
			</div>
			<br />
			<button class="button" type="submit" name="prevStep" value="true">Back</button>
			<button class="button" type="submit" name="submit" value="true">Submit</button>
		}
		else if (Model.CurrentStep == 3)
		{
			<h3 style="color: green">Membership request submitted succesfuly! :)</h3>
			<p style="color: green">Your membership request has been successfuly submitted and is pending admin approval.</p>
			<h4>Profile summary:</h4>
			<ul>
				<li><strong>First Name:</strong>@Model.FirstName</li>
				<li><strong>Last Name:</strong>@Model.LastName</li>
				<li><strong>Email:</strong>@Model.Email</li>
				<li><strong>Address:</strong>@Model.Address</li>
				<li><strong>Phone Number:</strong>@Model.PhoneNumber</li>
				<li><strong>Membership Type:</strong>@Model.MembershipType</li>
				<li><strong>Interests:</strong>@Model.Interests</li>
			</ul>
			<p>Will will notify you once your request has been approved.</p>
			<button class="button"
					type="button"
					onclick="window.location.href='/Home'"
					style="background: #390814;"
					onmouseover="this.style.backgroundColor='white'; this.style.color= '#390814'"
					onmouseout="this.style.backgroundColor='#390814'; this.style.color='white'">
				Return home 
			</button>
		}
	</form>
</div>